{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@layouts/*": ["src/layouts/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@styles/*": ["src/styles/*"],
      "@config/*": ["src/config/*"],
      "@images/*": ["src/assets/images/*"]
    }
  }
}
